<%- layout("/layout/boilerplate") %>
<body>
  <form
    method="post"
    action="/list/<%= data._id %>/edit?__method=PATCH"
    class="needs-validation"
    novalidate
    enctype="multipart/form-data"
  >
    <h5>Title</h5>
    <input
      type="text"
      name="title"
      value="<%= data.title %>"
      class="form-control"
      required
    />
    <h6>Description</h6>
    <textarea name="description" class="form-control" required>
<%= data.description %></textarea
    >
    <h6>Price</h6>
    <input
      type="number"
      name="price"
      value="<%= data.price %>"
      class="form-control"
      min="0"
      required
    />
    <h6>City</h6>
    <input
      type="text"
      name="location"
      value="<%= data.location %>"
      class="form-control"
      required
    />
    <h6>Country</h6>
    <input
      type="text"
      name="country"
      value="<%= data.country %>"
      class="form-control"
      required
    />
    <h6>Current image</h6>
    <div style="margin-bottom: 8px">
      <% if (data.Image && data.Image.url) { %>
      <img
        src="<%= data.Image.url %>"
        alt="current image"
        style="
          max-width: 200px;
          display: block;
          margin-bottom: 6px;
          border-radius: 10px;
        "
      />
      <% } %>
      <label>
        <h6>Upload new image to replace!</h6>
        <input type="file" name="url" class="form-control" />
      </label>
    </div>
    <button class="page-button">Done</button>
  </form>
</body>
