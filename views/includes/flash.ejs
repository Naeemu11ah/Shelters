<% if (successMessage && successMessage.length) { %>
<div
  class="alert alert-success alert-dismissible fade show flash-alert"
  role="alert"
>
  <p><%= successMessage %></p>
  <button
    type="button"
    class="btn-close"
    data-bs-dismiss="alert"
    aria-label="Close"
  ></button>
</div>
<% } %>
<!--  -->
<% if (errorMessage && errorMessage.length) { %>
<div
  class="alert alert-danger alert-dismissible fade show flash-alert"
  role="alert"
>
  <p><%= errorMessage %></p>
  <button
    type="button"
    class="btn-close"
    data-bs-dismiss="alert"
    aria-label="Close"
  ></button>
</div>
<% } %>
